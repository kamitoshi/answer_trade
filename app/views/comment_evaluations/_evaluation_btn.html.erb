<% comment_evaluation = comment.comment_evaluations.find_by(student_id: current_student.id) %>
<% if comment_evaluation.present? %>
  <div class="good dis-ib pa-10">
    <%= link_to comment_comment_evaluation_path(comment.id, comment_evaluation.id), method: :delete, remote: true, class: "evaluation_destroy green" do %>
      <i class="fas fa-thumbs-up"></i>
      <span><%= comment.comment_evaluations.count %></span>
    <% end %>
  </div>
<% else %>
  <div class="ungood dis-ib pa-10">
    <%= link_to comment_comment_evaluations_path(comment_id: comment.id), method: :post, remote: true, class: "valuation_create gray" do %>
      <i class="fas fa-thumbs-up"></i>
      <span><%= comment.comment_evaluations.count %></span>
    <% end %>
  </div>
<% end %>
