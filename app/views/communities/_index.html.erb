<% if tweets.any? %>
  <% tweets.each do |tweet| %>  
    <div class="tweet-box ma-l-50 pa-y-20">
      <div class="tweet-info">
        <span class="tweet-student"><%= link_to "@#{tweet.student.name}", student_path(tweet.student) %></span>    
        <span class="tweet-date pa-l-20 gray"><%= tweet.created_at.strftime('%Y/%m/%d %H:%M:%S') %></span>
      </div>
      <div class="tweet-detail" id="tweet">
        <p class="pa-20"><%= tweet.detail %></p>
      </div>
      <div class="tweet-menu">
        <% if tweet.student == current_student %>
          <div class="menu-item right">
            <%= link_to "コメントを削除する", tweet_path(tweet.id), method: :delete, remote: true, class: "tweet_destroy gray" %>
          </div>
        <% else %>
          <div class="menu-item gray">
            <div class="high dis-ib pa-10">
              <i class="fas fa-thumbs-up"></i>
              <span>123</span>
            </div>
            <div class="low dis-ib pa-10">
              <i class="fas fa-thumbs-down"></i>
              <span>123</span>
            </div>
            <div class="response dis-ib pa-10">
              <%= link_to "返信", new_tweet_reply_tweet_path(tweet), class:"gray" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <p class="center">まだやりとりがありません</p>
<% end %>