<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="community_index-box">
        <h3 class="title">コミュニティ一覧</h3>
        <table class="table table-hover center">
          <% if @communities.any? %>
            <thead>
              <tr class="active">
                <th width="20%">コミュニティ名</th>
                <th width="40%">スローガン</th>
                <th width="20%">コミュニティ創設者</th>
                <th width="20%">メンバー数</th>
              </tr>
            </thead>
            <% @communities.each do |community| %>
              <tbody>
                <tr class="pointer" data-href="<%= community_path(community) %>">
                  <td><%= community.name %></td>
                  <td><%= community.slogan %></td>
                  <td><%= community.admin.name %></td>
                  <td><%= community.students.count %>
                </tr>
              </tbody>
            <% end %>
          <% else %>
            <p class="ma-t-30 center">該当しませんでした</p>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>