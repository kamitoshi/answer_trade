<% if current_student.follow?(student) %>
  <%= link_to "フォローをやめる", follow_path(current_student.follow(student), student_id: student.id), method: :delete, remote: true, class: "btn btn-danger" %>
<% else %>
  <%= link_to "フォローする", follows_path(student_id: student.id), method: :post, remote: true, class: "btn btn-primary" %>
<% end %>