<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <h3 class="pa-r-50">AnswerTrade</h3>
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navber" aria-controls="Navber" aria-expanded="false" aria-label="ナビゲーションの切替">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="Navber">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/">ホーム <span class="sr-only">(現位置)</span></a>
        </li>
        <li class="nav-item dropdown">
          <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            コミュニティ関連
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to "コミュニティ一覧", communities_path, class: "dropdown-item" %>
            <%= link_to "コミュニティ新規投作成", new_community_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">その他</a>
          </div>
        </li>
        <li class="nav-item dropdown">
          <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            動画関連
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to "動画一覧", videos_path, class: "dropdown-item" %>
            <%= link_to "動画新規投稿", new_video_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">その他</a>
          </div>
        </li>
      </ul>
      <div class="form-box pa-30">
        <form class="form-inline my-2 my-lg-0">
          <input type="search" class="form-control mr-sm-2" placeholder="検索..." aria-label="検索...">
          <button type="submit" class="btn btn-outline-success my-2 my-sm-0">検索</button>
        </form>
      </div>
      <% if student_signed_in? %>
        <div class="login_info">
          <div class="pa-10">
            <%= current_student.name %>
          </div>
          <div class="pa-10">
            <%= link_to "ログアウト", destroy_student_session_path, method: :delete, class:"btn btn-danger btn-sm" %>
          </div>
        </div>
      <% else %>
        <div class="btn-box">
          <div class="pa-10">
            <%= link_to "ログイン", new_student_session_path, class:"btn btn-success btn-sm" %>
          </div>
          <div class="pa-10">
            <%= link_to "新規登録", new_student_registration_path, class:"btn btn-info btn-sm" %>
          </div>
        </div>
      <% end %>
    </div><!-- /.navbar-collapse -->
  </nav>
