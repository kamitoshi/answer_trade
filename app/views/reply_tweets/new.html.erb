<div class="container">
  <div class="row">
    <div class="col-12 pa-30">
      <div class="tweet_detail-box">
        <div class="student">
          <div class="thumnail-image dis-ib">
            <%= image_tag @tweet.student.thumnail_image, size:"50x50", class:"circle" %>
          </div>
          <div class="name-box dis-ib pa-10">
            <%= link_to @tweet.student.name, student_path(@tweet.student) %>
          </div>
        </div>
        <div class="info right">
          <h6 class="gray"><%= @tweet.created_at.strftime("%Y/%m/%d %H:%M:%S") %></h6>
        </div>
      </div>
      <div class="detail pa-30">
        <p><%= @tweet.detail %></p>
      </div>
    </div>
  </div>
  <hr>
  <div class="low">
    <div class="col-12">
      <div class="reply_tweet_form-box">
        <%= form_for @reply_tweet, url: tweet_reply_tweets_path(params[:tweet_id]) do |f|%>

          <div class="field pa-y-30">
            <% text = "返信内容を記入" %>
            <%= f.text_area :detail, autofocus: true, autocomplete: "detail", class:"form-control", placeholder: text, style:"height:300px" %>
          </div>

          <div class="actions right">
            <%= f.submit "返信", class:"btn btn-primary" %>
          </div>
          
        <% end %>
      </div>
    </div>
  </div>
</div>
