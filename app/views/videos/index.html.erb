<div class="container">
  <div class="row">
    <div class="col-2">
      <div class="video_side-box">
        <%= render "videos/category_index" %>
      </div>
    </div>
    <div class="col-10">

      <h5>新着動画</h5>
      <hr>
      <% @videos.each do |video| %>
        <div class="video_index-box">
          <div class="video_index-item">
            <div class="thumnail-image"></div>
            <div class="info">
              <h6 class="info-title pa-y-10"><%= video.title %></h6>
              <div class="info-detail pa-10">
                <p><%= video.student.name %></p>
                <p>視聴回数　<%= video.count %>回</p>
                <p>投稿日　<%= video.created_at.strftime("%Y/%m/%d") %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <h5>動画一覧</h5>
      <hr>
      <% @videos.each do |video| %>
        <div class="video_index-box">
          <div class="video_index-item">
            <div class="thumnail-image"></div>
            <div class="info">
              <h6 class="info-title pa-y-10"><%= video.title %></h6>
              <div class="info-detail pa-10">
                <p><%= video.student.name %></p>
                <p>視聴回数　<%= video.count %>回</p>
                <p>投稿日　<%= video.created_at.strftime("%Y/%m/%d") %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      </div>
    </div>
  </div>
</div>
