<div class="container-fluid">
  <div class="row ma-t-30">
    <div class="col-8">
      <div class="video_view-box">
        <div class="content-box">
          <div class="content">
            <% @video.content %>
          </div>
          <div class="info">
            <h4 class="pa-b-30"><%= @video.title %></h4>
            <div class="dis-flex-box">
              <div class="info-itme">
                <p>視聴人数　<%= @video.watches.count %>人・投稿日　<%= @video.created_at.strftime("%Y/%m/%d") %></p>
              </div>
              <div class="info-item">
                <div class="high dis-ib pa-10">
                  <i class="fas fa-thumbs-up font-30"></i>
                  <span>123</span>
                </div>
                <div class="low dis-ib pa-10">
                  <i class="fas fa-thumbs-down font-30"></i>
                  <span>123</span>
                </div>
              </div>
            </div>
            <hr>
            <div class="video_student-info">
              <div class="dis-flex-box pa-b-30">
                <div class="student">
                  <div class="thumnail-image dis-ib">
                    <%= image_tag @video.student.thumnail_image, size:"50x50", class:"circle" %>
                  </div>
                  <div class="name-box dis-ib pa-10">
                    <%= link_to @student.name, student_path(@student) %>
                    <span>フォロワー数　〇人</span>
                  </div> 
                </div>
                <% unless current_student == @student %>
                  <div class="follow" id="follow_toggle">
                    <%= render "follows/follow_btn", student: @student %>
                  </div>
                <% end %>
              </div>
              <div class="video_ditail pa-30">
                <p><%= @video.detail %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="video_side-box">
        <% if @videos.any? %>
          <% @videos.each do |video| %>
            <div class="side-item row pa-b-20">
              <div class="side-content col-5">
              
              </div>
              <div class="side-info col-7">
                <h6 class="pa-b-20"><%= video.title %></h6>
                <p><%= video.student.name %></p>
                <p>視聴人数　<%= video.watches.count %>人</p>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="center">他の動画がありません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
